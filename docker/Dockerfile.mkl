# syntax=docker/dockerfile:1.7
FROM intel/oneapi-basekit:2024.2-devel-ubuntu24.04 AS builder

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        ca-certificates \
        curl \
        git \
        pkg-config && \
    rm -rf /var/lib/apt/lists/*

RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | \
    sh -s -- -y --default-toolchain stable
ENV PATH=/root/.cargo/bin:${PATH}

WORKDIR /app
COPY . .

SHELL ["/bin/bash", "-lc"]
RUN source /opt/intel/oneapi/setvars.sh && \
    cargo build --locked --release --no-default-features --features mkl \
        -p deepseek-ocr-cli && \
    cargo build --locked --release --no-default-features --features mkl \
        -p deepseek-ocr-server

FROM intel/oneapi-runtime:2024.2-ubuntu24.04

RUN apt-get update && \
    apt-get install -y --no-install-recommends ca-certificates && \
    rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/deepseek-ocr-cli /usr/local/bin/deepseek-ocr-cli
COPY --from=builder /app/target/release/deepseek-ocr-server /usr/local/bin/deepseek-ocr-server

ENTRYPOINT ["/usr/local/bin/deepseek-ocr-server"]
